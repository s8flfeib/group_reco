<!DOCTYPE html>
<html lang = "en">
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href=../css/login.css>
        <meta name="viewport" content="width = device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie = edge" />
        <title>Login</title>
    </head>
    <body>
        <div class="loginform">
            <h1>Login</h1>
        </div>
        <div class="main"> 
            <div class="error">
                <ul class="list1">
                    <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                    <li><%= error.message %></li>
                    <% }) %> <% } %>
                </ul>
                <ul class="list2">
                    <% if(messages.success_msg) { %>
                    <li><%= messages.success_msg %></li>
                    <% } %>
                </ul>
                <!--Email not in DB!-->
                <ul class="list3">
                    <% if (messages.error) { %>
                    <li><%= messages.error %></li>
                    <% } %>
                </ul>
            </div>
            
       
        
            <form action="/users/login" method="POST"> 
                       
                <input class="email" type="email" id="email" name="email" placeholder="Email" required />
                <br>
                <input class="password" type="password" id="password" name="password" placeholder="Password" required />
                <br>
                <input class="submit" type="submit" value = "Login"/> 
                <br>     
                    
                <div class="register">
                    Not registered? <a href="/users/register">Create an account</a><br><br>
                    Back to the <a  href="/">Homepage</a>
                </div>
                        
            </form>
        </div> 
    </body>
</html>